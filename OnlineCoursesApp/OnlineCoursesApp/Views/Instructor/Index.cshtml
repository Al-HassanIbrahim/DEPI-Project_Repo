
@model IEnumerable<CourseViewModelForInst>

<h2>Courses</h2>

@if (!Model.Any())
{
    <p>No courses available for this instructor.</p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Course ID</th>
                <th>Course Name</th>
                <th>Number of Students</th>
                <th>Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@course.CourseId</td>
                    <td>@course.CourseName</td>
                    <td>@course.NumStudents</td>
                    <td>@course.Type</td>
                    <td>
                        <a asp-controller="Instructor" asp-action="Manage" class="btn btn-success btn-sm">Manage Course</a>
                        <a asp-controller="Instructor" asp-action="Students" asp-route-id="@course.CourseId" class="btn btn-info btn-sm">Students</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<style>
    .btn {
        transition: background-color 0.3s, transform 0.3s;
    }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }
</style>
