@model IEnumerable<CourseHomePageViewModel>

<div class="container mt-3">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3 class="mb-0">Courses</h3>
        @* <a asp-controller="Instructor" asp-action="Profile" asp-route-id="@ViewBag.InstructorId" class="btn btn-custom btn-sm">
            <i class="fa fa-user"></i> Profile
        </a> *@
    </div>
    <div class="mb-3">
        <a asp-controller="Instructor" asp-action="NewCourse" asp-route-id="@ViewBag.InstructorId" class="btn btn-success btn-sm">
            <i class="fa fa-plus"></i> New Course
        </a>
    </div>
    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <strong>No courses available for this instructor.</strong>
        </div>
    }
    else
    {
        <table class="table table-hover table-bordered">
            <thead class="thead-dark" style="background-color: #343a40; color: white;">
                <tr>
                    <th>Course ID</th>
                    <th>Course Name</th>
                    <th>Number of Students</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.CourseId</td>
                        <td>@course.CourseName</td>
                        <td>@course.NumStudents</td>
                        <td>@course.Type</td>
                        <td>
                            @if (course.CourseStatus == CourseStatus.Rejected)
                            {
                                <span class="badge badge-danger">Rejected</span>
                            }
                            else if (course.CourseStatus == CourseStatus.Approved)
                            {
                                <span class="badge badge-success">Approved</span>
                            }
                            else if (course.CourseStatus == CourseStatus.UnderReview)
                            {
                                <span class="badge badge-warning">Under Review</span>
                            }
                            else if (course.CourseStatus == CourseStatus.Closed)
                            {
                                <span class="badge badge-secondary">Closed</span>
                            }
                            else if (course.CourseStatus == CourseStatus.Deleted)
                            {
                                <span class="badge badge-dark">Deleted</span>
                            }
                        </td>
                        <td>
                            <a asp-controller="Instructor" asp-action="ManageCourse" asp-route-id="@course.CourseId" class="btn btn-success btn-sm">
                                <i class="fa fa-cog"></i> Manage
                            </a>
                            <a asp-controller="Instructor" asp-action="Students" asp-route-id="@course.CourseId" class="btn btn-info btn-sm">
                                <i class="fa fa-users"></i> Students
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>



<style>
    .btn {
        transition: background-color 0.3s, transform 0.3s;
    }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

    .btn-custom {
        background-color: #28a745;
        color: white;
        border-radius: 50px;
        padding: 10px 20px;
        border: none;
    }

        .btn-custom:hover {
            background-color: #218838;
        }

    .badge {
        font-size: 14px;
        padding: 8px;
        border-radius: 10px;
    }


    .badge-danger { /* Rejected */
        background-color: #dc3545; /* الأحمر */
        color: white; /* النص الأبيض */
    }

    .badge-success { /* Approved */
        background-color: #28a745; /* الأخضر */
        color: white; /* النص الأبيض */
    }

    .badge-warning { /* UnderReview */
        background-color: #ffc107; /* الأصفر */
        color: black; /* النص الأسود لتوضيحه على الخلفية الصفراء */
    }

    .badge-secondary { /* Closed */
        background-color: #6c757d; /* الرمادي */
        color: white; /* النص الأبيض */
    }

    .badge-dark { /* Deleted */
        background-color: #343a40; /* الأسود */
        color: white; /* النص الأبيض */
    }
</style>
