@model List<CoursesHomeViewModel>
@{
    ViewData["Title"] = "ShowInstructorCourses";
    @using OnlineCoursesApp.ViewModel.HomePageViewModels;

}

<h1>ShowInstructorCourses</h1>

@foreach(var crsVm in @Model){
    <div class="card" style="max-width: 500px;">
        <div class="row g-0">
            <div class="col-sm-5">
                <img src="@crsVm.CourseImage" alt="...">
            </div>
            <div class="col-sm-7">
                <div class="card-body">
                    <h5 class="card-title">@crsVm.CourseName</h5>
                    <p class="card-text">@crsVm.CourseDescription</p>
                    <a href="#" class="btn btn-primary stretched-link">View Course</a>
                </div>
            </div>
        </div>
    </div>
}


