    @model List<StudentViewModelForInst>

@{
    ViewData["Title"] = "Students";
}

<div class="container mt-4">
    <h2>Students Enrolled in <strong>@ViewData["CourseName"]</strong></h2>
    <hr class="my-4">
    @if (!Model.Any())
    {
        <div class="alert alert-warning">No students are enrolled in this course.</div>
    }
    else
    {
        <table class="table table-hover table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Student ID</th>
                    <th>Student Name</th>
                    <th>Progress</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.StudentId</td>
                        <td>@student.StudentName</td>
                        <td>
                            @if (student.Progress > 0)
                            {
                                <div class="progress">
                                    <div class="progress-bar bg-success" role="progressbar" style="width:@student.Progress%" aria-valuenow="@student.Progress" aria-valuemin="0" aria-valuemax="100">
                                        @student.Progress%
                                    </div>
                                </div>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Instructor" asp-action="Index" asp-route-id="@ViewData["InstructorId"]" class="btn btn-primary">Back to List</a>
    }
</div>

<style>
    .progress {
        height: 20px;
        margin-bottom: 0;
    }

    .progress-bar {
        line-height: 20px;
    }
</style>
