@model CourseManageViewModel

@{
    ViewData["Title"] = "ManageCourse";
}



<div class="container">
    <div class="d-flex justify-content-between align-items-start">
        <!-- Course Title (Left) -->
        <h1>@Model.Title</h1>

        <!-- Image and Description (Right) -->
        <div class="d-flex flex-column align-items-end">
            <img src="@Model.Image" alt="Course Image" class="img-thumbnail shadow" style="max-width: 200px; border-radius: 0%;">
            <!-- Enlarged and Italicized Description below the image -->
            <p class="mt-3" style="font-size: 1.25rem; font-style: italic;">@Model.Description</p>
        </div>
    </div>

    <br /> <!-- Remove the horizontal line here if necessary -->
    <!-- زر إضافة قسم جديد -->
    <div class="mt-3">
        <a asp-action="NewSection" asp-route-courseId="@Model.CourseId" class="btn btn-success">
            <i class="fa fa-plus"></i> Add New Section
        </a>
    </div>
    <br />
    <table class="table table-hover table-bordered">
        <thead class="thead-dark" style="background-color: #343a40; color: white;">
            <tr>
                <th>Section ID</th>
                <th>Title</th>
                <th>Link</th>
                <th>Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sec in Model.Sections)
            {
                <tr>
                    <td>@sec.SectionId</td>
                    <td>@sec.Title</td>
                    <td>
                        <a href="@sec.Link" target="_blank">@sec.Link</a>
                    </td>
                    <td>@sec.Number</td>
                    <td>
                        <a asp-action="EditSection" asp-route-id="@sec.SectionId" class="btn btn-success btn-sm">
                            <i class="fa fa-edit"></i> Edit
                        </a>
                        <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@Url.Action("DeleteSection", "Instructor", new { sectionId = sec.SectionId })')">
                            <i class="fa fa-trash"></i> Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <br />

    <!-- زر العودة إلى صفحة Index -->
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-primary">
            <i class="fa fa-arrow-left"></i> Back to Courses
        </a>
    </div>

</div>


<script type="text/javascript">
    function confirmDelete(deleteUrl) {
        if (confirm("Are you sure you want to delete this section?")) {
            window.location.href = deleteUrl;
        }
    }
</script>




